#string methods
#upper case
r="hello"
r2=r.upper()
print(r2)
#lower case
r="HELLO"
r2=r.lower()
print(r2)
#remove the white space(strip case)
r="hello,  world"
r2=r.strip()
print(r2)
#replce
r="hello, world"
r2=(r.replace('o','d'))
print(r2)
#count the number
r="hello, world"
print('saddbawkhhafkbfamabkaaaffbhddffb'.count('a'))


#escape sequences
s=('hi i\'m rio. my age is 22.')
print(s)