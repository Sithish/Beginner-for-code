#if statement
weather="sunny"
if weather == "rain":
    print("play indoor game")
else:
    print("play robot")
print("enjoy your game")


#if elif else statement
weather="sunny"
chilmate="rainy"
if weather == "rain":
    print("play indoor game")
elif weather =="sunny":
    print("play cricket")
elif weather=="sunny" and chilmate=="rainy":
    print("u play indoor game")
else:
    print("play robot")
print("enjoy your game")


#nested if statement
weather="sunny"
chilmate="rainy"
if weather == "sunny":
    if chilmate=="rainy":
        print("play indoor game")
    else:
        print("stay home")
elif weather=="rainy":
    print("go and play")
elif chilmate=="rainy":
    if chilmate=="rrian":
        print("dont't play")
    else:
        print("eat and sleep")
print("ok! enjoy you're game")


#simple calculate program(project)
num1=int(input("enter a num1 value: "))
num2=int(input("enter a num2 value: "))
operation=input("enter a operation: ")
if operation=="+":
    print(f"addtion of two number is: {num1+num2}")
elif operation=="-":
    print(f"sub of two number is: {num1-num2}")
elif open=="*":
    print(f"mul of two number is: {num1*num2}")
else:
    print(f"div of two number is: {num1/num2}")



